<h1>Your info</h1>

  <% current_user.employee.each do |employee| %>
    <p>
  <strong>Name:</strong>
  <%= @employee.name %>
    </p>
    <p>
  <strong>Position:</strong>
  <%= @employee.position %>
    </p>
    <p>
  <strong>Company:</strong>
  <%= @employee.company_name %>
    </p>
 
<p>
  <strong>Address:</strong>
  <%= @employee.address %>
    </p>

    <p>
  <strong>Tax code:</strong>
  <%= @employee.tax %>
    </p>

<%= link_to 'Edit', edit_employee_path(employee) %>
<% end %>
 
